# Environment Configuration - ROI Calculator Enterprise

# Application Environment
NODE_ENV=development

# API Configuration
PORT=3001
API_BASE_URL=http://localhost:3001

# Database Configuration
DATABASE_PATH=./api/data/roi_calculator.db

# Email Configuration (Production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@roicalculator.com
NOTIFICATION_EMAIL=leads@roicalculator.com

# CORS Configuration (Production)
ALLOWED_ORIGINS=https://your-vercel-url.vercel.app,https://your-domain.com

# Security Configuration
API_KEY=demo-key-2025
ADMIN_API_KEY=catalyst-admin-2025
JWT_SECRET=your-jwt-secret-key-here

# Analytics & Monitoring (Optional)
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
SENTRY_DSN=your-sentry-dsn

# External API Keys (Optional)
CURRENCY_API_KEY=your-currency-api-key
SENDGRID_API_KEY=your-sendgrid-api-key

# Feature Flags
ENABLE_PDF_EXPORT=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_ADMIN_DASHBOARD=true

# Performance Configuration
API_TIMEOUT=5000
MAX_UPLOAD_SIZE=10mb
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log